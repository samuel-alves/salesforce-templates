{
  "trailingComma": "none",
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": { "parser": "lwc" }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": { "parser": "html" }
    },
    {
      "files": "*.{cls,trigger,apex}",
      "options": {
        "tabWidth": 4,
        "proseWrap": "preserve",
        "printWidth": 160
      }
    }
  ]
}
